<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_grey"
        android:gravity="end|center">

        <ImageView
            android:id="@+id/dialog_img_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit_black"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/med_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_medicine_other"/>

    <TextView
        android:id="@+id/med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medrol"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scheduled_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled for 8:0"
            android:textSize="16sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/strength_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 g"
            android:textSize="16sp"
            android:padding="10dp" />


        <TextView
            android:id="@+id/med_left_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Pills left"
            android:textSize="16sp"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/light_grey"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:background="@drawable/blue_rounded_button"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_btn_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:background="@drawable/blue_rounded_button"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_btn_reschedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reschedule"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:background="@drawable/blue_rounded_button"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>