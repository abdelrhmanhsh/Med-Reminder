<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment"
    tools:context=".ui.homepage.view.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle"
        app:layout_constraintBottom_toTopOf="@+id/allMed_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/sun_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:text="@string/sunday"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mon_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/monday"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/sun_txt"
            app:layout_constraintTop_toTopOf="@+id/sun_txt" />

        <TextView
            android:id="@+id/tue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/tuesday"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/mon_txt"
            app:layout_constraintTop_toTopOf="@+id/sun_txt" />

        <TextView
            android:id="@+id/wed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/wednesday"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tue_txt"
            app:layout_constraintTop_toTopOf="@+id/sun_txt" />

        <TextView
            android:id="@+id/thu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/thursday"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/wed_txt"
            app:layout_constraintTop_toTopOf="@+id/sun_txt" />

        <TextView
            android:id="@+id/fri_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/friday"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/thu_txt"
            app:layout_constraintTop_toTopOf="@+id/sun_txt" />

        <TextView
            android:id="@+id/sat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="35dp"
            android:text="@string/saturday"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fri_txt"
            app:layout_constraintTop_toTopOf="@+id/sun_txt" />

        <ImageView
            android:id="@+id/back_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_ic"
            app:tint="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sun_txt"/>

        <ImageView
            android:id="@+id/next_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/black"
            app:layout_constraintTop_toTopOf="@+id/back_ic"/>


     <!--   <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/sun_txt"
            app:layout_constraintTop_toTopOf="@+id/back_ic"/>  -->



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allMed_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_layout"
        tools:itemCount="7"
        tools:listitem="@layout/single_medicine" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMed_floatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/add_ic"
        app:backgroundTint="@color/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>